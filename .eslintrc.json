{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["prettier", "import", "react", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "globals": {
    "applyHeadingAnimation": "readonly",
    "applyButtonAnimation": "readonly",
    "setAriaAttributes": "readonly",
    "updateProgress": "readonly",
    "getAchievements": "readonly",
    "i18n": "readonly",
    "currentLang": "readonly",
    "resetProgress": "readonly",
    "startOnboarding": "readonly",
    "resetOnboarding": "readonly",
    "showOnboarding": "readonly",
    "backupProgress": "readonly",
    "syncProgress": "readonly",
    "updateLeaderboard": "readonly",
    "sendFeedback": "readonly",
    "logEvent": "readonly",
    "safeRun": "readonly",
    "showSettings": "readonly",
    "gsap": "readonly",
    "container": "readonly",
    "Tooltip": "readonly",
    "BrowserRouter": "readonly",
    "location": "readonly"
  },
  "rules": {
    "import/no-cycle": [
      "error",
      { "maxDepth": 1 }
    ],
  "react/react-in-jsx-scope": "off",
  "react/prop-types": "off",
  "react/no-unknown-property": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "no-else-return": [
      "error",
      { "allowElseIf": true }
    ],
  "no-unused-vars": ["warn", { "varsIgnorePattern": "^_" }],
  "no-redeclare": "warn",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src", "components", "utils"]
      }
    }
    ,
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  }

  ,
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {}
    },
    {
      "files": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*", "**/cypress/**", "**/playwright/**"],
      "env": {
        "jest": true,
        "browser": true,
        "node": true
      }
    }
  ]
}
