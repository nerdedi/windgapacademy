{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["prettier", "import", "react", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "rules": {
    "import/no-cycle": [
      "error",
      { "maxDepth": 1 }
    ],
  "react/react-in-jsx-scope": "off",
  "react/prop-types": "off",
  "react/no-unknown-property": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "no-else-return": [
      "error",
      { "allowElseIf": true }
    ],
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src", "components", "utils"]
      }
    }
    ,
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  }

  ,
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {}
    },
    {
      "files": ["**/__tests__/**", "**/*.test.*", "**/*.spec.*", "**/cypress/**", "**/playwright/**"],
      "env": {
        "jest": true,
        "browser": true,
        "node": true
      }
    }
  ]
}
