{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist", "node_modules", "**/sizzle.d.ts"],
  "types": []
}
