{
  "name": "windgap-academy",
  "version": "1.0.0",
  "description": "Modern build setup for Windgap Academy",
  "scripts": {
    "dev": "esbuild app.js --bundle --sourcemap --outdir=dist --watch",
    "build": "esbuild app.js --bundle --minify --outdir=dist && node esbuild.config.js",
    "optimize-images": "npx imagemin assets/images/* --out-dir=assets/images-optimized && npx cwebp -q 80 assets/images/* -o assets/images-webp/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "jest"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "imagemin-cli": "^7.0.1",
    "cwebp-bin": "^7.0.0",
    "typescript": "^5.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0"
  }
}
