{
  "type": "module",
  "name": "windgap-academy",
  "version": "2.0.0",
  "description": "Professional multi-modal learning and gaming platform",
  "scripts": {
    "build": "vite build",
    "start": "node server.cjs",
    "dev": "vite --host",
    "preview": "vite preview",
    "lint": "eslint src components pages --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "jest --runInBand --watchAll=false",
    "test:ci": "npx jest --runInBand --color",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "build:models": "node scripts/build-ai-models.js",
    "optimize:assets": "node scripts/optimize-assets.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@react-three/fiber": "^8.15.11",
    "@react-three/drei": "^9.88.13",
    "three": "^0.158.0",
    "framer-motion": "^10.16.4",
    "@tensorflow/tfjs": "^4.13.0",
    "tone": "^14.7.77",
    "cannon-es": "^0.20.0",
    "@react-three/cannon": "^6.6.0",
    "zustand": "^4.4.4",
    "react-spring": "^9.7.3",
    "leva": "^0.9.35",
    "postprocessing": "^6.32.2",
    "react-router-dom": "^6.17.0",
    "socket.io-client": "^4.7.2",
    "web-speech-api": "^0.0.1",
    "ml-matrix": "^6.10.4"
  },
  "devDependencies": {
    "@types/three": "^0.158.0",
    "@vitejs/plugin-react": "^4.1.0",
    "vite": "^4.5.0",
    "typescript": "^5.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@playwright/test": "^1.39.0",
    "cypress": "^13.4.0",
    "lint-staged": "^15.2.2"
  }
}
