{
  "type": "module",
  "name": "windgap-academy",
  "version": "1.0.0",
  "description": "Modern build setup for Windgap Academy",
  "scripts": {
    "build": "vite build",
    "start": "node server.cjs",
    "dev": "vite",
    "preview": "vite preview",
    "lint": "eslint src components o3de/src pages --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "jest --runInBand --watchAll=false --testNamePattern .* --testPathPatterns /workspaces/windgapacademy",
    "test:ci": "npx jest --runInBand --color",
    "test:coverage": "jest --coverage",
    "install:playwright-browsers": "npx playwright install --with-deps",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:cypress": "cypress run",
    "e2e:playwright": "playwright test",
    "prebuild": "npm run optimize:images && npm run inject:env",
    "optimize:images": "node scripts/optimize-images.js",
    "inject:env": "echo 'Env injection placeholder'",
    "build:css": "npx minify styles/windgap-academy.css > styles/windgap-academy.min.css && npx minify styles/output.css > styles/output.min.css && npx minify styles/tailwind-theme.css > styles/tailwind-theme.min.css && npx minify styles/tailwind.css > styles/tailwind.min.css && npx minify styles/advanced.css > styles/advanced.min.css && npx minify styles/refinements.css > styles/refinements.min.css",
    "regen:css": "npx tailwindcss -i ./styles/tailwind.css -o ./styles/output.css --minify --config tailwind.config.js && node ./scripts/sanitize-css.js"
  },
  "dev": "concurrently \"npm run server\" \"npm run client\"",
  "server": "nodemon app.js",
  "client": "cd client && npm start",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.5",
    "cheerio": "^1.1.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest-environment-jsdom": "^30.0.5",
    "next": "^15.5.2",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "dotenv": "^16.3.1",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@babylonjs/core": "^8.25.0",
    "@babylonjs/gui": "^8.25.0",
    "@babylonjs/loaders": "^8.25.0",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "firebase": "^12.1.0",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "howler": "^2.2.4",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.542.0",
    "morgan": "^1.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "three": "^0.179.1",
    "winston": "^3.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/windgap-academy.git"
  },
  "license": "MIT",
  "keywords": [
    "windgap",
    "academy",
    "esbuild",
    "react",
    "modern"
  ],
  "author": "Your Name <natalie@example.com>"
}
