{
  "type": "module",
  "name": "windgap-academy",
  "version": "2.0.0",
  "description": "Professional multi-modal learning and gaming platform",
  "scripts": {
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:production": "NODE_ENV=production vite build",
    "start": "node server.cjs",
    "start:production": "NODE_ENV=production node server.cjs",
    "dev": "vite --host",
    "dev:debug": "vite --host --debug",
    "preview": "vite preview",
    "preview:production": "vite preview --mode production",

    "lint": "eslint src components pages backend --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src components pages backend --ext .js,.jsx,.ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",

    "test": "jest --runInBand --watchAll=false",
    "test:watch": "jest --watch",
    "test:ci": "npx jest --runInBand --color --coverage",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",

    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",

    "build:models": "node scripts/build-ai-models.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "optimize:images": "node scripts/optimize-images.js",
    "analyze:bundle": "npx vite-bundle-analyzer",

    "docker:build": "docker build -t windgap-academy .",
    "docker:run": "docker run -p 3000:3000 windgap-academy",
    "docker:dev": "docker-compose up --build",

    "deploy:staging": "npm run build && npm run deploy:staging:upload",
    "deploy:production": "npm run build:production && npm run deploy:production:upload",

    "health:check": "node scripts/health-check.js",
    "security:audit": "npm audit && npm run security:scan",
    "security:scan": "npx audit-ci --config audit-ci.json",

    "clean": "rm -rf dist node_modules/.cache",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install",
    "reset": "npm run clean:all && npm run build",

    "postinstall": "npm run build:models",
    "precommit": "npm run lint:staged",
    "prepush": "npm run test:ci && npm run e2e"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@react-three/fiber": "^8.15.11",
    "@react-three/drei": "^9.88.13",
    "three": "^0.158.0",
    "framer-motion": "^10.16.4",
    "@tensorflow/tfjs": "^4.13.0",
    "tone": "^14.7.77",
    "cannon-es": "^0.20.0",
    "@react-three/cannon": "^6.6.0",
    "zustand": "^4.4.4",
    "react-spring": "^9.7.3",
    "leva": "^0.9.35",
    "postprocessing": "^6.32.2",
    "react-router-dom": "^6.17.0",
    "socket.io-client": "^4.7.2",
    "web-speech-api": "^0.0.1",
    "ml-matrix": "^6.10.4"
  },
  "devDependencies": {
    "@types/three": "^0.158.0",
    "@vitejs/plugin-react": "^4.1.0",
    "vite": "^4.5.0",
    "typescript": "^5.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@playwright/test": "^1.39.0",
    "cypress": "^13.4.0",
    "lint-staged": "^15.2.2"
  }
}
