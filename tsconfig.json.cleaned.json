{
  "compilerOptions": {
  "target": "ES2020",
  "module": "NodeNext",
  "jsx": "react",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "outDir": "dist",
  "sourceMap": true,
  "incremental": true,
  "allowJs": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
